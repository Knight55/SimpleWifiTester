<Window x:Class="SimpleWifiTester.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleWifiTester"
        mc:Ignorable="d" Title="PopupWindow"
        Height="120" MaxHeight="120" MinHeight="120"
        Width="240" MaxWidth="240" MinWidth="240">
    <StackPanel Orientation="Vertical">
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">
            "This is a popup window!"
        </TextBlock>
        <StackPanel Orientation="Horizontal">
            <Button Click="OnOkButtonClicked" HorizontalAlignment="Left">OK</Button>
            <Button Click="OnCancelButtonClicked" HorizontalAlignment="Right">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
